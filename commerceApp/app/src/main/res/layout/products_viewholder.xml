<?xml version="1.0" encoding="utf-8"?>


    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:navGraph="@navigation/nav_graph"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productNameHolder"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Producto todo guapo"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/priceHolder"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="precio de producto"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stockHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock: 30" />

        <TextView
            android:id="@+id/saleDelayHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saleDelayStr" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>


